    <SolidColorBrush options:Freeze="true"
                     x:Key="{ComponentResourceKey TypeInTargetAssembly={x:Type themes:ResourceKeys}, ResourceId=ButtonPressedOuterBorderKey}"
                     Color="#2C628B" />

    <LinearGradientBrush options:Freeze="true"
