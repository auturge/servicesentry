<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 
         Margins for TabItems - these will be set in the respective triggers.
      -->
    <Thickness x:Key="TabItemMarginBase">0,1,-4,0</Thickness>
    <Thickness x:Key="TabItemMarginSelected">0,0,-4,-1</Thickness>
    <Thickness x:Key="TabItemMarginHover">0,1,-4,0</Thickness>
    <Thickness x:Key="TabPanelPadding">4,4,0,0</Thickness>


    
</ResourceDictionary>