<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
   
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="MenuItemStyles.xaml" />
        <ResourceDictionary Source="SeparatorStyles.xaml" />
        <ResourceDictionary Source="FileHandlingStyles.xaml" />
        <ResourceDictionary Source="ServiceGroupMenuStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!-- This BitmapEffect is used for context and sub menus -->
    <DropShadowEffect
    x:Key="PopupDropShadow"
    Color="#FF9BA8B4"
    ShadowDepth="5" />

    <Style x:Key="MenuIconStyle" TargetType="{x:Type Image}">
        <Setter Property="Width" Value="16" />
        <Setter Property="Height" Value="16" />
    </Style>
    
</ResourceDictionary>